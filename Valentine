<script>

const slides = [
{title:"Saijal‚Ä¶", text:"You feel like peace.", btn:"Continue"},
{title:"When you smile‚Ä¶", text:"Everything slows down.", btn:"Okay‚Ä¶"},
{title:"I tried being calm about this.", text:"I really did.", btn:"Go on"},
{title:"But there‚Äôs something you should know.", text:"I don‚Äôt play fair when it comes to you.", btn:"What do you mean?"},
{title:"ERROR 404", text:"System overload. Too many feelings detected.", crash:true}
];

let current = 0;

function nextSlide() {
    current++;
    const slide = slides[current];

    if(slide.crash) {
        systemCrash();
        return;
    }

    document.getElementById("content").innerHTML = `
        <h1>${slide.title}</h1>
        <p>${slide.text}</p>
        <button class="softBtn" onclick="nextSlide()">${slide.btn}</button>
    `;
}

function systemCrash() {
    document.body.classList.add("glitch");
    document.getElementById("content").innerHTML = `
        <h1>SYSTEM COMPROMISED</h1>
        <p>Soft boy mode shutting down...</p>
    `;

    setTimeout(() => {
        villainMode();
    }, 2500);
}

function villainMode() {
    document.body.style.background = "linear-gradient(135deg, #000000, #300000)";
    document.body.style.color = "white";

    document.getElementById("content").innerHTML = `
        <h1>Alright Saijal üòà</h1>
        <p>You thought this was just cute?</p>
        <p>I‚Äôve already decided.</p>
        <p>You‚Äôre mine.</p>
        <button class="yesBtn" onclick="proposal()">Prove it.</button>
    `;

    startDevils();
}

function proposal() {
    document.getElementById("content").innerHTML = `
        <h1>Be with me?</h1>
        <button class="yesBtn" onclick="finalYes()">YES ‚ù§Ô∏è</button>
        <button class="noBtn" id="noBtn">No üòà</button>
    `;
    moveNoButton();
}

function moveNoButton() {
    const noBtn = document.getElementById("noBtn");
    noBtn.addEventListener("mouseover", () => {
        const x = Math.random() * (window.innerWidth - 100);
        const y = Math.random() * (window.innerHeight - 50);
        noBtn.style.left = x + "px";
        noBtn.style.top = y + "px";
    });
}

function finalYes() {
    document.getElementById("content").innerHTML = `
        <h1>It‚Äôs official üíï</h1>
        <p>It‚Äôs you, me‚Ä¶</p>
        <p>and Satpal.</p>
        <p>Forever.</p>
    `;
}

function startDevils() {
    setInterval(() => {
        const devil = document.createElement("div");
        devil.classList.add("devil");
        devil.innerHTML = "üòà";
        devil.style.left = Math.random() * 100 + "vw";
        devil.style.animationDuration = (Math.random() * 3 + 3) + "s";
        document.body.appendChild(devil);
        setTimeout(() => devil.remove(), 6000);
    }, 800);
}

</script>

